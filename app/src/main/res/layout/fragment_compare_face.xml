<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/q600"
        android:layout_marginLeft="@dimen/q50"
        android:layout_marginRight="@dimen/q50"
        android:layout_marginTop="@dimen/q10">

        <ImageView
            android:id="@+id/ivLeft"
            android:layout_width="@dimen/q450"
            android:layout_height="@dimen/q600"
            android:scaleType="centerInside"
            android:src="@drawable/icon_person_add" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/ivRight"
            android:layout_width="@dimen/q450"
            android:layout_height="@dimen/q600"
            android:scaleType="centerInside"
            android:src="@drawable/icon_person_add" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvMsg"
        style="@style/show_text"
        android:layout_height="@dimen/q200"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/q100"
        tools:text="相识度 99%" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/q100">

        <Button
            android:id="@+id/btnCompare"
            style="@style/btn"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="确认" />
    </RelativeLayout>


</LinearLayout>